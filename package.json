{
	"name": "docker-api-simulator",
	"type": "module",
	"version": "0.3.1",
	"private": false,
	"description": "Docker Registry HTTP API v2 simulator for testing and development",
	"author": "Bruno Bernard",
	"license": "MIT",
	"homepage": "https://github.com/eznix86/docker-registry-api-simulator#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/eznix86/docker-registry-api-simulator.git"
	},
	"bugs": {
		"url": "https://github.com/eznix86/docker-registry-api-simulator/issues"
	},
	"keywords": [
		"docker",
		"distribution",
		"registry",
		"simulator"
	],
	"bin": {
		"registry-api-simulator": "dist/index.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "bun build src/index.ts --target=bun --outdir=dist --format=esm --minify && chmod +x dist/index.js",
		"publish": "bun run build && bun pm pack",
		"serve": "bun run src/index.ts serve",
		"generate": "bun run src/index.ts generate",
		"validate": "bun run src/index.ts validate",
		"dev": "bun run src/index.ts",
		"check": "hurl --test tests/*.hurl"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@antfu/eslint-config": "^6.2.0",
		"@elysiajs/swagger": "^1.3.1",
		"@faker-js/faker": "^10.1.0",
		"ajv": "^8.17.1",
		"chalk": "^5.6.2",
		"commander": "^14.0.2",
		"elysia": "^1.4.13",
		"js-yaml": "^4.1.0",
		"jsonc-parser": "^3.3.1",
		"logixlysia": "^5.3.0",
		"lowdb": "^7.0.1",
		"ora": "^9.0.0"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/js-yaml": "^4.0.9"
	}
}
