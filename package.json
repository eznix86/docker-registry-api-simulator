{
  "name": "docker-api-simulator",
  "version": "1.0.0",
  "description": "Docker Registry HTTP API v2 simulator for testing and development",
  "license": "MIT",
  "type": "module",
  "private": false,
  "bin": {
    "registry-simulator": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "NODE_ENV=production bun build src/index.ts --target=node --outdir=dist --minify && chmod +x dist/index.js",
    "publish": "bun run build && bun pm pack",
    "serve": "bun run src/index.ts serve",
    "generate": "bun run src/index.ts generate",
    "validate": "bun run src/index.ts validate",
    "dev": "bun run src/index.ts",
    "check": "hurl --test tests/*.hurl"
  },
  "dependencies": {
    "@elysiajs/swagger": "^1.3.1",
    "@faker-js/faker": "^10.1.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "elysia": "^1.4.13",
    "js-yaml": "^4.1.0",
    "jsonc-parser": "^3.3.1",
    "lowdb": "^7.0.1",
    "ora": "^9.0.0",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/js-yaml": "^4.0.9"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
