{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/eznix86/docker-registry-api-simulator/main/template.schema.json",
  "title": "Docker Registry Database Template",
  "description": "Template for generating Docker Registry API v2 database files",
  "type": "object",
  "properties": {
    "auth": {
      "description": "Optional authentication credentials",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "description": "Username for authentication"
          },
          "password": {
            "type": "string",
            "description": "Password for authentication"
          }
        },
        "required": ["username", "password"],
        "additionalProperties": false
      }
    },
    "repositories": {
      "description": "List of repositories with their configurations",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Repository name (lowercase alphanumeric with optional separators)",
            "pattern": "^[a-z0-9]+(?:[._-][a-z0-9]+)*$"
          },
          "tags": {
            "type": "array",
            "description": "List of tags for this repository",
            "items": {
              "type": "string"
            },
            "minItems": 1
          },
          "format": {
            "type": "string",
            "description": "Manifest format",
            "enum": ["oci", "docker"],
            "default": "oci"
          },
          "multiarch": {
            "type": "boolean",
            "description": "Whether to create multi-architecture manifest list/index",
            "default": false
          },
          "architectures": {
            "type": "array",
            "description": "List of architectures (only used when multiarch is true)",
            "items": {
              "type": "string",
              "enum": ["amd64", "arm64", "arm", "386", "ppc64le", "s390x", "mips64le", "riscv64"]
            },
            "default": ["amd64", "arm64"]
          },
          "os": {
            "type": "string",
            "description": "Operating system",
            "default": "linux",
            "enum": ["linux", "windows", "darwin", "freebsd"]
          }
        },
        "required": ["name", "tags"],
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "required": ["repositories"],
  "additionalProperties": false
}
